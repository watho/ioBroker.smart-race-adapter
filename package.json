  "author": {
    "name": "watho",
    "email": "watho@web.de"
  },
  "homepage": "https://github.com/watho/ioBroker.smart-race-adapter",
  "license": "MIT",
  "keywords": [
    "smartrace",
    "slotcar"
  ],
